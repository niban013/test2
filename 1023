<script>
// åŸå§‹è³‡æ–™
const data = {
  "å°ç£": { "å°åŒ—": ["ä¸­æ­£å€", "å¤§å®‰å€", "ä¿¡ç¾©å€"], "å°ä¸­": ["åŒ—å€", "è¥¿å±¯å€", "å—å€"] },
  "æ—¥æœ¬": { "æ±äº¬": ["æ–°å®¿", "æ¸‹è°·", "å“å·"], "å¤§é˜ª": ["æ¢…ç”°", "é›£æ³¢", "å¿ƒé½‹æ©‹"] },
  "ç¾åœ‹": { "ç´ç´„": ["æ›¼å“ˆé “", "å¸ƒé­¯å…‹æ—", "çš‡åå€"], "æ´›æ‰ç£¯": ["å¥½èŠå¡¢", "è–å¡”è«å°¼å¡", "æ¯”ä½›åˆ©å±±"] }
};

// æ‰å¹³åŒ–ç´¢å¼•
const index = [];
for (let country in data) {
  for (let city in data[country]) {
    for (let area of data[country][city]) {
      index.push({ country, city, area });
    }
  }
}

// SelectBox å°è£é¡ï¼ˆSelect2 ç‰ˆï¼‰
class SelectBox {
  constructor(selectId, key, label) {
    this.$select = $(`#${selectId}`);
    this.key = key;
    this.label = label;
    this.value = "";        // åˆå§‹å€¼ç©º
    this.updating = false;  // é˜²æ­¢å¾ªç’°è§¸ç™¼

    // åˆå§‹åŒ– Select2ï¼Œéš±è—æœå°‹æ¡†
    this.$select.select2({
      width: '200px',
      minimumResultsForSearch: Infinity, 
      templateResult: (state) => {
        if (!state.id) return state.text;
        return $('<span>').text(state.text).addClass(state.element.className);
      },
      templateSelection: (state) => {
        if (!state.id) return state.text;
        return $('<span>').text(state.text).addClass(state.element.className);
      }
    });
  }

  update(filteredIndex) {
    this.updating = true;
    const prevValue = this.value || "";
    const values = [...new Set(filteredIndex.map(i => i[this.key]))];

    this.$select.empty();

    // åˆå§‹æç¤ºæ–‡å­—ä¹Ÿå¯é¸
    const placeholderText = `è«‹é¸${this.label}`;
    const isPlaceholderSelected = prevValue === "" || prevValue === placeholderText;
    this.$select.append(new Option(placeholderText, placeholderText, isPlaceholderSelected, isPlaceholderSelected));

    // åŠ å…¥å¯é¸å€¼
    values.forEach(v => {
      const selected = v === prevValue;
      const option = new Option(v, v, selected, selected);
      if (selected) option.className = 'selected-option';
      this.$select.append(option);
    });

    // ä¿ç•™é¸ä¸­å€¼ï¼Œä¸è§¸ç™¼å¾ªç’°
    this.$select.val(prevValue || placeholderText).trigger('change.select2');
    this.updating = false;
  }

  onChange(callback) {
    this.$select.on('change', (e) => {
      if (this.updating) return;
      this.value = e.target.value;
      callback();
    });
  }
}

// å»ºç«‹ä¸‹æ‹‰
const selectCountry = new SelectBox('select1', 'country', 'åœ‹å®¶');
const selectCity = new SelectBox('select2', 'city', 'åŸå¸‚');
const selectArea = new SelectBox('select3', 'area', 'å€åŸŸ');

// æ›´æ–°æ‰€æœ‰ä¸‹æ‹‰
function updateAll() {
  const filtered = index.filter(i =>
    (!selectCountry.value || i.country === selectCountry.value || selectCountry.value.startsWith("è«‹é¸")) &&
    (!selectCity.value || i.city === selectCity.value || selectCity.value.startsWith("è«‹é¸")) &&
    (!selectArea.value || i.area === selectArea.value || selectArea.value.startsWith("è«‹é¸"))
  );

  selectCountry.update(filtered);
  selectCity.update(filtered);
  selectArea.update(filtered);
}

// åˆå§‹åŒ–ï¼Œåˆå§‹å°±é¡¯ç¤ºè«‹é¸XX
updateAll();

// ç¶å®šäº‹ä»¶
selectCountry.onChange(updateAll);
selectCity.onChange(updateAll);
selectArea.onChange(updateAll);
</script>
