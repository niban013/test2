        $("#sidebar-action-btn").on("click", function () {
            alert("ä½ é»äº†åº•éƒ¨æŒ‰éˆ•ï¼");
            // é€™è£¡å¯ä»¥æ”¾ä»»ä½•åŠŸèƒ½ï¼Œä¾‹å¦‚æ‰“é–‹è¨­å®šé¢æ¿
