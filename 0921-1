<div class="tab-wrapper">
  <div class="tab-nav-container">
    <button class="scroll-btn scroll-left"><i class="fas fa-chevron-left"></i></button>
    <ul class="tab-nav">
      <!-- 預設 tab -->
      <li class="active"><a href="#tab0">請新增 Tab</a></li>
    </ul>
    <button class="scroll-btn scroll-right"><i class="fas fa-chevron-right"></i></button>
  </div>

  <div class="tab-content">
    <!-- 預設內容 -->
    <div id="tab0" class="tab-pane grid">請新增 Tab</div>
  </div>
</div>

<button id="add-tab-btn" style="margin:20px auto; display:block;">新增 Tab</button>
<button id="add-card-btn" style="margin:20px auto; display:block;">新增卡片</button>

<script>
$(function(){
  var $nav = $(".tab-nav");
  var $content = $(".tab-content");
  var tabCount = 0;
  var cardCount = 0;

  function updateArrows(){
    var scrollLeft = $nav.scrollLeft();
    var maxScroll = $nav[0].scrollWidth - $nav.outerWidth();
    $(".scroll-left").toggle(scrollLeft > 0);
    $(".scroll-right").toggle(scrollLeft < maxScroll - 1);
  }

  $(".scroll-left").click(function(){ $nav.animate({scrollLeft:'-=150'},200,updateArrows); });
  $(".scroll-right").click(function(){ $nav.animate({scrollLeft:'+=150'},200,updateArrows); });
  $nav.on("scroll", updateArrows);
  updateArrows();

  function activateTab(id){
    $nav.find("li").removeClass("active");
    $nav.find("a[href='"+id+"']").parent().addClass("active");
    $content.children().hide();
    $(id).fadeIn(200);

    var $li = $nav.find("a[href='"+id+"']").parent();
    var liPos = $li.position().left;
    var liWidth = $li.outerWidth();
    var navWidth = $nav.outerWidth();
    var newScroll = liPos + $nav.scrollLeft() - (navWidth/2 - liWidth/2);
    $nav.animate({scrollLeft: newScroll}, 300, updateArrows);
  }

  $nav.on("click", "a", function(e){
    e.preventDefault();
    activateTab($(this).attr("href"));
  });

  $("#add-tab-btn").click(function(){
    tabCount++;
    var newId = "tab"+tabCount;

    // 刪除預設 tab 和內容
    if($('#tab0').length){
      $('#tab0').remove();
      $nav.find('li').remove();
    }

    $nav.append('<li><a href="#'+newId+'">Tab '+tabCount+'</a></li>');
    $content.append('<div id="'+newId+'" class="tab-pane grid" style="display:none;"></div>');
    activateTab('#'+newId);
  });

  function updatePlaceholders($grid){
    $grid.find('.grid-placeholder').remove();
    var total = $grid.children('.card').length;
    var remainder = total % 5;
    if(remainder>0){
      for(var i=0;i<5-remainder;i++){
        $grid.append('<div class="grid-placeholder"></div>');
      }
    }
  }

  $("#add-card-btn").click(function(){
    var $activeTab = $content.children('.tab-pane:visible');
    if(!$activeTab.length) return;
    cardCount++;
    var newCard = `
      <div class="card">
        <h3>卡片 ${cardCount}</h3>
        <p>這是第 ${cardCount} 張卡片。</p>
        <button class="accordion-toggle">更多資訊</button>
        <div class="accordion"><p>詳細內容 ${cardCount}</p></div>
      </div>
    `;
    $activeTab.append(newCard);
    updatePlaceholders($activeTab);
  });

  // Accordion toggle
  $content.on('click','.accordion-toggle',function(){
    $(this).next('.accordion').toggleClass('open');
  });

});
</script>

</body>
</html>
