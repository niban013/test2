  position: relative;
  width: 800px;
  margin: 50px auto;
  border-radius: 12px;
  background: #fff;
  padding-top: 50px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.tab-nav-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50px;
  display: flex;
  align-items: center;
  overflow: hidden;
  background: #fff;
  border-bottom: 1px solid #ddd;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

