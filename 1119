$("#quickMenuList a").on("click", function(e){
    e.preventDefault();
    const target = $(this).data("target");
    
    // ç”¨ä½ ç¾æœ‰ loader è¼‰å…¥ iframe é é¢
    if(window.loader){
        loader.load(target);
    }
    
    // é—œé–‰ Modal
    $("#quickMenuModal").modal("hide");
});

